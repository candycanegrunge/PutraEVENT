<!-- spinner_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Add your desired background color or drawable -->
    <solid android:color="@android:color/white" /> <!-- Example: White color -->
    <!-- Add a stroke if you want an outline -->
    <stroke
        android:width="1dp"
        android:color="@color/grey_op" /> <!-- Example: Your stroke color -->
    <!-- Add corner radius for rounded corners -->
    <corners android:radius="8dp" /> <!-- Example: 8dp radius -->
</shape>
